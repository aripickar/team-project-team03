<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:src="@drawable/teacher_headshot" />

            <TextView
                android:id="@+id/teacherTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/profilePicture"
                android:background="@color/colorTeacherMatchPrimary"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="TEACHER"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/profilePicture"
                android:layout_toRightOf="@id/profilePicture"
                android:text="Eric Jones"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:paddingTop="8dp"
                android:text="2.2 miles away"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gradesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/teacherTag"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="26dp"
                android:text="Grade(s):"
                android:textColor="@color/colorTeacherMatchBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subjectsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gradesText"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Subject(s):"
                android:textColor="@color/colorTeacherMatchBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/numStudentsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subjectsText"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="# of Students:"
                android:textColor="@color/colorTeacherMatchBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/schoolText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numStudentsText"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="School:"
                android:textColor="@color/colorTeacherMatchBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gradesInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/teacherTag"
                android:layout_marginStart="10dp"
                android:layout_marginTop="26dp"
                android:layout_toEndOf="@+id/gradesText"
                android:text="8th"
                android:textColor="@color/colorTeacherMatchBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/subjects_input"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gradesInput"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/subjectsText"
                android:text="Math, Science"
                android:textColor="@color/colorTeacherMatchBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/students_input"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subjects_input"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/numStudentsText"
                android:text="28"
                android:textColor="@color/colorTeacherMatchBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/teacher_info_card.xml"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/students_input"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/schoolText"
                android:text="Berkeley Middle School"
                android:textColor="@color/colorTeacherMatchBlack"
                android:textSize="16sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>