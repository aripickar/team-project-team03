<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorTeacherMatchPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="41.52dp"
        android:id="@+id/apple"
        android:src="@drawable/apple"
        android:layout_marginTop="116dp"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/Teacher_Match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teacher_mat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginTop="118dp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/teacher_mat"/>

    <Button
        android:id="@+id/create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/create_acct"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:text="@string/login"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/create_account"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>